package functions;

import java.util.Scanner;

public class str {
	
	public static Scanner cin=new Scanner(System.in);

	public static int load(String text){	//wypisanie textu i wczytanie inta 
		System.out.print(text);
		return cin.nextInt();
	}
		
	public static String load_S(String text){	//wypisanie textu i wczytanie inta 
		System.out.print(text);
		return cin.nextLine();
	}
	
	public static void out_S(String str){
	System.out.println(str);
	}
	
	public static String string_r(String str){
		return new StringBuilder(str).reverse().toString();
	}
	
	public static int string_c(String str,char char_){
		int l=0;
		for(int i=0;i<str.length();i++){
			if(str.charAt(i)==char_){
				l++;
			}
		}
		return l;
	}
	
	public static int ToArabic(String number) {
        if (number == "") return 0;
        if (number.startsWith("M")) return 1000 + ToArabic(number.substring(number.length()-1-1,number.length()-1));
        if (number.startsWith("CM")) return 900 + ToArabic(number.substring(number.length()-1-2,number.length()-1));
        if (number.startsWith("D")) return 500 + ToArabic(number.substring(number.length()-1-1,number.length()-1));
        if (number.startsWith("CD")) return 400 + ToArabic(number.substring(number.length()-1-2,number.length()-1));
        if (number.startsWith("C")) return 100 + ToArabic(number.substring(number.length()-1-1,number.length()-1));
        if (number.startsWith("XC")) return 90 + ToArabic(number.substring(number.length()-1-2,number.length()-1));
        if (number.startsWith("L")) return 50 + ToArabic(number.substring(number.length()-1-1,number.length()-1));
        if (number.startsWith("XL")) return 40 + ToArabic(number.substring(number.length()-1-2,number.length()-1));
        if (number.startsWith("X")) return 10 + ToArabic(number.substring(number.length()-1-1,number.length()-1);
        if (number.startsWith("IX")) return 9 + ToArabic(number.substring(number.length()-1-2,number.length()-1));
        if (number.startsWith("V")) return 5 + ToArabic(number.substring(number.length()-1-1,number.length()-1);
        if (number.startsWith("IV")) return 4 + ToArabic(number.substring(number.length()-1-2,number.length()-1));
        if (number.startsWith("I")) return 1 + ToArabic(number.substring(number.length()-1-1,number.length()-1);
        throw new ArgumentOutOfRangeException("something bad happened");
    }
	
	public static void pal(String str){
		boolean b=true;
		for (int i=0;i<str.length()/2;i++){
			if (str.charAt(i)!=str.charAt(str.length()-1-i)){
				b=false;
			}
		}
		if (b==true){
			System.out.println(str+" jest palindromem");
		}
	} 
	
	public static void plec (String str){
		if(str.endsWith("a")){
			System.out.print(str+" jestes kobiet¹!!!");
		}	
	}
}
