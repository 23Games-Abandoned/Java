package Podstawy;
import java.util.Scanner;

public class Funkcje12 {
	
	public static int n,m,x;
	public static Scanner odczyt;

	public static void main(String[] args) {
		odczyt = new Scanner(System.in);
		System.out.println("Podaj licznê:");
		n=odczyt.nextInt();
		System.out.println("Podaj potêgê:");
		m=odczyt.nextInt();
		System.out.println("Suma cyfr z liczby "+n+" wynosi: "+suma_cyfr(n));
	}

	public static int potega (int a, int b) {
		x=n;
		for (int i=n;i<=m;i++){
			x*=n;
		}
		return x;
	}
}